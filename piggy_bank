#include <iostream>

int main() {
  double pesos;
  double reais;
  double soles;

  double dollars;
  
  std::cout << "Enter number of Colombian Pesos: ";
  std::cin >> pesos;

  std::cout << "Enter number of Brazilian Reais: ";
  std::cin >> reais;

  std::cout << "Enter number of Peruvian Soles: ";
  std::cin >> soles;

  /* conversion rates 17/10/2022:
  Pesos to USD = 0.05
  Reais to USD = 0.19
  Soles to USD = 0.25
  */

  dollars = (0.05 * pesos) + (0.19 * reais) + (0.25 * soles);

  std::cout << "Total US Dollars = $ " << dollars << "\n";
  
}
